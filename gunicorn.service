[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=jenkins
Group=www-data
WorkingDirectory=/var/lib/jenkins/workspace/django-cicd-pipeline/jenkin_python
ExecStart=/var/lib/jenkins/workspace/django-cicd-pipeline/env/bin/gunicorn \
          --workers 3 \
          --bind unix:/run/gunicorn.sock \
          --error-logfile /var/lib/jenkins/workspace/django-cicd-pipeline/error.log \
          --capture-output \
          --log-level debug \
          jenkin_python.wsgi:application

[Install]
WantedBy=multi-user.target
